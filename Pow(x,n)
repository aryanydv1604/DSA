class Solution {
    public double myPow(double x, int n) {
        long nn =n;    // use long to avoid overflow when n = Integer.MIN_VALUE
        if(nn <0){
            x =1/x; //invert the base
            nn=-nn;  //make exponent positive
        }
         double ans =1;
        while(nn>0){
            if((nn & 1)!=0){ //chack LSB
                ans = ans*x;
            }
            x = x*x;
            nn= nn>>1; //Right Shift n
        }
        return ans;
    }
}
