class Solution {
    public String reverseOnlyLetters(String s) {
        char[] arr = s.toCharArray();
        int n= arr.length;
        int left= 0; 
        int right= n-1;

        while(left< right){
            if(!Character.isLetter(arr[left])){        //skip non-letters from left
                left++;
            }
            else if(!Character.isLetter(arr[right])){    //skip non-letters from right
                right--;
            }
            else{
                char temp = arr[left];
                arr[left] = arr[right];
                arr[right] = temp;
                left++;
                right--;
            }
        }
        return new String(arr);
    }
}
